{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build", 
      "config": { "distDir": "dist" } 
    },
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/server-bundle.js", 
          "index.html"             
        ]
      }
    }
  ],
  "routes": [
    { "src": "/client-bundle.js", "dest": "/dist/client-bundle.js" },
    { "src": "/client-bundle.css", "dest": "/dist/client-bundle.css" },
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/(.*)", "dest": "/server.js" }
  ]
}
