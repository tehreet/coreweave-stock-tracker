{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" } 
    },
    {
      "src": "dist/server-bundle.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/client-bundle.js", "dest": "/client-bundle.js" },
    { "src": "/client-bundle.css", "dest": "/client-bundle.css" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "handle": "filesystem" }, 
    { "src": "/(.*)", "dest": "/dist/server-bundle.js" }
  ]
}
